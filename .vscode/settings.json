
{   
    "eslint.enable": true,
    "eslint.packageManager": "npm",
    "eslint.run": "onSave",
    "eslint.validate": [
        "javascript"
    ],
    "eslint.autoFixOnSave": true,
    "eslint.options": {
        "configFile": "./eslintrc.json"
    },
    "eslint._legacyModuleResolve": true,
